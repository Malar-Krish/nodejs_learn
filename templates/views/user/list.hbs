<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net" rel="stylesheet">
</head>
<body class="bg-light">

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Registered Users</h4>
            <a href="/" class="btn btn-light btn-sm">Add New User</a>
        </div>
        <div>
            {{#if success_msg}}
            <div class="alert alert-success">{{success_msg}}</div>
            {{/if}}

            {{#if error_msg}}
            <div class="alert alert-danger">{{error_msg}}</div>
            {{/if}}
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each users}}
                        <tr>
                            <td>{{this.fname}} {{this.lname}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.phoneno}}</td>
                            <td><a href="/user/edit/{{this._id}}" class="btn btn-primary">Edit</a>

<a class="btn btn-sm btn-danger" onclick="deleteUser('{{this._id}}')">
    Delete
</a></td>
                        </tr>
                        {{else}}
                        <tr>
                            <td colspan="3" class="text-center py-4">No users found.</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

</body>


<script>
async function deleteUser(id) {
    if (!confirm('Are you sure?')) return;

    try {
        const response = await fetch(`/user/delete/${id}`, {
            method: 'DELETE', // You can now use the proper DELETE verb
        });

        if (response.ok) {
            window.location.reload(); // Refresh the list after success
        } else {
            alert('Failed to delete user');
        }
    } catch (err) {
        console.error('Error:', err);
    }
}
</script>

</html>
