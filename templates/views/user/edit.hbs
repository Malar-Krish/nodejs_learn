<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Edit User</title>
</head>
<body>
    {{>header}}
    
    <h2>Edit User: {{users.fname}}</h2>
    
    <!-- Pass the ID in the action URL -->
    <form action="/user/update/{{users._id}}" method="POST">
        <!-- First Name -->
        <div>
            <label for="fname">First Name:</label><br>
            <input type="text" id="fname" name="fname" value="{{users.fname}}" required>
        </div><br>

        <!-- Last Name -->
        <div>
            <label for="lname">Last Name:</label><br>
            <input type="text" id="lname" name="lname" value="{{users.lname}}">
        </div><br>

        <!-- Email -->
        <div>
            <label for="email">Email:</label><br>
            <input type="email" id="email" name="email" value="{{users.email}}" required>
        </div><br>

        <!-- Phone Number -->
        <div>
            <label for="phone">Phone Number:</label><br>
            <input type="tel" id="phone" name="phoneno" value="{{users.phoneno}}">
        </div><br>

        <!-- Submit Button -->
        <button type="submit">Update User</button>
        <a href="/user/list">Cancel</a>
    </form>
</body>
{{>footer}}
</html>
